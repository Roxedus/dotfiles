{
    "profiles": [{{ range .windows.terminal.profiles }}
        {
            "updates": "{{ list "{" . "}" | join "" }}",
            "opacity": 70,
            "useAcrylic": true,
            "colorScheme": "Transpy",
            "font": {
                "face": "FiraCode Nerd Font"
            }
        },{{ end }}
    ],
    "schemes": [
        {
