{{- if ne .chezmoi.os "windows" -}}
{{ if lookPath "brew" }}
{{- template "brew_env.tmpl" . -}}
{{ end }}

export EDITOR=nano
export ZSH=$HOME/.oh-my-zsh

HIST_STAMPS="%d/%m/%y %T"
HISTFILE="$ZDOTDIR/.zhistory"
ZSH_CACHE_DIR="${XDG_CACHE_HOME:-$HOME/.cache}/ohmyzsh"

plugins=(
    ansible
    colored-man-pages
    colorize
    command-not-found
    common-aliases
    docker
    docker-compose
    git
    terraform
    history
    kubectl
    pip
    ssh-agent
    virtualenv
    zsh-autosuggestions
    zsh-syntax-highlighting
    {{ if eq .chezmoi.os "darwin" -}}
    iterm2
    {{ end -}}
    {{ if not ( contains "code-server" .chezmoi.hostname) -}}
    gpg-agent
    vscode
    {{ end -}}
    {{ if eq .chezmoi.os "linux" -}}
    {{ if eq .chezmoi.osRelease.name "Ubuntu" -}}
    ubuntu
    {{ end -}}
    {{ end -}}
    )

zstyle :omz:plugins:ssh-agent agent-forwarding on
zstyle :omz:plugins:ssh-agent lazy yes
zstyle :omz:update mode disabled

source $ZSH/oh-my-zsh.sh

if [ -t 0 ]; then

    {{ if eq .chezmoi.os "linux" -}}
    export GPG_TTY=$(tty)
    {{ if not ( contains "code-server" .chezmoi.hostname) -}}
    VSCODE=code-insiders
    {{ end -}}
    {{ end -}}

    {{- if eq .chezmoi.os "darwin" }}
    source ~/.config/iterm2.sh
    {{- end }}

    alias zshconfig="${EDITOR} $ZDOTDIR/.zshrc"
    alias ohmyzsh="${EDITOR} $ZSH"

    export PATH="$PATH:$HOME/.local/bin"

    {{ template "wsl_env.tmpl" . }}
    fpath=($HOME/.zsh/completion $fpath)

    autoload -U +X bashcompinit && bashcompinit
    autoload -Uz compinit && compinit

    (( $+commands[argocd] )) && source <(argocd completion zsh)
    (( $+commands[bat] )) && alias cat=bat
    (( $+commands[bw] )) && eval "$(bw completion --shell zsh); compdef _bw bw;"
    (( $+commands[chezmoi] )) && source <(chezmoi completion zsh)
    (( $+commands[helm] )) && source <(helm completion zsh)
    (( $+commands[kubecolor] )) && source <(kubectl completion zsh)
    (( $+commands[kubecolor] )) && alias kubectl=kubecolor
    (( $+commands[kubecolor] )) && compdef kubecolor=kubectl

    if [ -f ~/.bash_aliases ]; then
        . ~/.bash_aliases
    fi
fi
{{ end }}